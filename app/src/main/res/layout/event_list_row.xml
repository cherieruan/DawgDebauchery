<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cherie's Super Fun Party"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/event_list_description"
            android:layout_width="wrap_content"
            android:layout_marginRight="65dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Fun fun fun" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/event_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10/10/2009" />

            <TextView
                android:id="@+id/event_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:00 AM"
                android:layout_marginLeft="30dp" />

            <TextView
                android:id="@+id/event_list_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="private"
                android:layout_marginLeft="30dp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/event_list_icon"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_add_black_24dp" />

</RelativeLayout>